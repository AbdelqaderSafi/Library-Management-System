generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  LIBRARIAN
  MEMBER
}
enum TransactionStatus {
 BORROWED
 RETURNED 
 OVERDUE
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole     @default(MEMBER)
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted   Boolean     @default(false) @map("is_deleted")
  
  transactions BorrowTransaction[]
}

model Book {
  id             String   @id @default(uuid())
  title          String
  description    String?  
  publishDate    DateTime @db.Date @map("publish_date") 
  stock          Int
  availableStock Int      @map("available_stock")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  isDeleted   Boolean     @default(false) @map("is_deleted")

  transactions   BorrowTransaction[]
  authors      Author[]
  categories   Category[]
}

model Author {
  id   String  @id @default(uuid())
  name String   @unique
  

  books Book[]

  @@map("authors")
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  
  books Book[]

  @@map("categories")
}

model BorrowTransaction {
  id         String            @id @default(uuid())
  userId     String            @map("user_id")
  bookId     String            @map("book_id")
  borrowDate DateTime          @default(now()) @db.Date @map("borrow_date")
  dueDate    DateTime          @db.Date @map("due_date")
  returnDate DateTime?         @db.Date @map("return_date") 
  status     TransactionStatus @default(BORROWED)
  isDeleted   Boolean           @default(false) @map("is_deleted")
  
  user User @relation(fields: [userId], references: [id])
  book Book @relation(fields: [bookId], references: [id])
}

